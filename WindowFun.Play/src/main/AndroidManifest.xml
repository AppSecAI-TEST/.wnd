<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="kr.co.windowfun">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>

    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!--<uses-permission android:name="android.permission.RESTART_PACKAGES" />-->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="kr.AndroidSMS.permission.C2D_MESSAGE"/>

    <application
        android:name="kr.co.windowfun._Application"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="kr.co.windowfun.home"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="kr.co.windowfun.html"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name="kr.co.windowfun.video"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name="kr.co.windowfun.menu"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name="kr.co.windowfun.text"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name="kr.co.windowfun.demo"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name="kr.co.windowfun.demo2"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name="kr.co.windowfun.demo3"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name="kr.co.windowfun.main"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name="kr.co.windowfun.login"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"/>
    </application>

</manifest>