<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pw"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="ID"
        android:imeOptions="actionNext"
        android:inputType="textAutoComplete"
        android:privateImeOptions="defaultInputmode=english"
        android:visibility="visible"/>


    <EditText
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id"
        android:layout_alignStart="@+id/id"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="PASSWORD"
        android:imeOptions="actionSend"
        android:inputType="textPassword"
        android:visibility="visible"/>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pw"
        android:layout_alignLeft="@+id/pw"
        android:layout_alignRight="@+id/pw"
        android:layout_alignStart="@+id/pw"
        android:layout_below="@+id/pw"
        android:text="로그인"
        android:visibility="visible"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pw"
        android:layout_alignLeft="@+id/pw"
        android:layout_alignRight="@+id/pw"
        android:layout_alignStart="@+id/pw"
        android:layout_below="@+id/pw"
        android:text="로그아웃"
        android:visibility="invisible"/>
</RelativeLayout>
